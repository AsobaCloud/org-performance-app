footerHeight = 150px
footerPaddingTop = 20px

html, body
  height: 100%;

.sticky-wrap
  min-height: 100%;
  padding-bottom footerHeight

.sticky-footer
  position relative
  margin-top: (-1 * footerHeight)
  height footerHeight
  clear both
  padding-top footerPaddingTop
  .navbar
    margin 0
    height footerHeight - footerPaddingTop

.app-container
  position absolute
  top 70px
  bottom 0px
  left 0px
  right 0px

.app-row
  height 100%

.main-content
  height 100%

.kanban-list
  border #e7e7e7 1px solid
  height 98%
  margin-bottom 2%
  padding-right 7px
  padding-left 7px

.kanban-card
  background #f8f8f8
  border #e7e7e7 1px solid
  border-radius 4px
  box-shadow rgba(87,87,87,0.7) 1px 2px 4px

.row.kanban-content
  margin-left 5%
  height 75%
  min-height 500px

